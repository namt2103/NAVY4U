@model NAVY4U.Models.donHang

@using NAVY4U.Models;

@{
    ViewBag.Title = "ListOrder";
    List<donHang> list = (List<donHang>) ViewData["ListOrder"];
}

<div class="row">
    <!-- ============================================================== -->
    <!-- data table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">List Order</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="" class="table table-striped table-bordered second" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    Mã KH
                                </th>
                                <th>
                                    Khách Hàng
                                </th>
                                <th>
                                    Số Đơn Hàng
                                </th>
                                <th>
                                    Ngày Đặt
                                </th>
                                <th>
                                    Address
                                </th>
                                <th>
                                    Active
                                </th>
                                <th>
                                    Note
                                </th>
                            </tr>
                        </thead>
                        @{
                            foreach (var i in Common.GetDonHangs())
                            {
                                <tr>
                                    <td>
                                        @i.maKH
                                    </td>
                                    <td>
                                        @i.khachHang.tenKH
                                    </td>
                                    <td>
                                        @i.soDH
                                    </td>
                                    <td>
                                        @String.Format("{0:hh:mm:ss [dd MMM yyyy]}", i.ngayDat)
                                    </td>
                                    <td>
                                        @i.diaChiGH
                                    </td>
                                    <td>
                                        @i.daKichHoat
                                    </td>
                                    <td>
                                        @i.ghiChu
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

