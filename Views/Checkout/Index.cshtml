@model NAVY4U.Models.khachHang
@using NAVY4U.Models;
@{
    ViewBag.Title = "Thanh Toán";
    CartShop cart = Session["GioHang"] as CartShop;

}
<!-- ================ start banner area ================= -->
<section class="blog-banner-area" id="category">
    <div class="container h-100">
        <div class="blog-banner">
            <nav aria-label="breadcrumb" class="banner-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Cart")">Giỏ Hàng</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thanh Toán</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!-- ================ end banner area ================= -->
<!--================Checkout Area =================-->
<section class="checkout_area section-margin--small">
    <div class="container">
        <div class="order_box">
            <div class="table-responsive">
                <h3 class="text-center">Đơn Hàng</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Sản phẩm</th>
                            <th scope="col">Giá tiền</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Tổng</th>
                        </tr>
                        <tr></tr>
                    </thead>
                    <tbody class="list list_1">
                       @{ 
                        foreach (ctDonHang i in cart.productsCart.Values)
                        {
                            <tr>
                                <td>
                                    <div class="row">
                                        <div class="d-flex">
                                            <img width="100" src="@Common.getImageSanPhamById(i.maSP)" alt="">
                                        </div>
                                        <div class="media-body">
                                            <p>@Common.getNameSanPhamById(i.maSP)</p>
                                            <p>Mã sản phẩm: @i.maSP</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="cart_quantity">
                                    <div class="cart_quantity_button">
                                        <h5>@String.Format("₫{0:0,000}", (i.giaBan - i.giaBan * i.giamGia / 100))</h5>
                                    </div>
                                </td>
                                <td>
                                    <div class="product_count">
                                        <span>@i.soLuong</span>
                                    </div>
                                </td>
                                <td>
                                    <h5>@String.Format("₫{0:0,000}", @cart.moneyOfProduct(i))</h5>
                                </td>
                            </tr>
                        }
                            <tr>
                                @if (cart.totalOfCartShop() != 0)
                                {
                                    <td>
                                        <h5>Tạm tính: @String.Format("{0:0,00} VNĐ", @cart.totalOfCartShop())</h5>
                                        <br />
                                        <h5>Phí VAT(10%): @String.Format("{0:0,000} VNĐ", cart.totalOfCartShop() * 10 / 100)</h5>
                                        <br />
                                        <h5>Tổng: @String.Format("{0:0,000} VNĐ", (cart.totalOfCartShop() + (cart.totalOfCartShop() * 10) / 100)) </h5>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <h4>Không có sản phẩm nào</h4>
                                    </td>
                                }
                            </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="col-md-12">
            <h3 class="text-center">Thông Tin Khách Hàng</h3>
           @using (Html.BeginForm("SaveToDataBase", "Checkout", FormMethod.Post))
            {
                <div class="col-md-6 form-group p_star ">

                    @Html.TextBoxFor(m => m.tenKH, new { @class = "form-control", @placeholder = "Tên của bạn", @id = "Name", @name = "name" })
                </div>
                <div class="col-md-6 form-group p_star">

                    @Html.TextBoxFor(m => m.soDT, new { @class = "form-control", @placeholder = "Số điện thoại", @id = "number", @name = "number" })
                </div>
                <div class="col-md-6 form-group p_star">

                    @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Địa chỉ email", @id = "email", @name = "compemailany" })
                </div>
                <div class="col-md-6 form-group p_star">

                    @Html.TextBoxFor(m => m.diaChi, new { @class = "form-control", @placeholder = "Địa chỉ nhận hàng", @id = "Home address", @name = "Home address" })
                </div>
                <div class="col-md-6 form-group p_star">
                    @Html.TextAreaFor(m => m.ghiChu, new { @class = "form-control", @placeholder = "Ghi chú cho đơn hàng", @id = "Your note", @name = "message" })
                </div>
                <div class="col-md-6">
                    <a class="btn btn-success" href="@Url.Action("Index","Checkout")">Đặt hàng</a>
                </div>
            }
        </div>
    </div>
</section>
<!--================End Checkout Area =================-->